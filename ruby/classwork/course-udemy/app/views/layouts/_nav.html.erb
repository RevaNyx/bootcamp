<div class="container-fluid">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to "Tamir's Articles", root_path, class: "navbar-brand" %>
  </div>

  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <div class="d-flex justify-content-end align-items-center">
      <%= link_to "About", about_path, class: "navbar-brand mx-2" %>
      <%= link_to "Contact", contact_path, class: "navbar-brand mx-2" %>
      <% if !current_user %>
      <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary mx-2" %>
      <%= link_to "Log in", new_user_session_path, class: "btn btn-outline-primary mx-2"  %>
      <% else %>
        <div class="dropdown mx-2">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                <%= current_user.username %>
                
            </button>
            <ul class="dropdown-menu">
                <li>
                    <a href="#">Action</a>
                </li>
                <li>
                    <a href="#">Another action</a>
                </li>
                <li>
                    <%= link_to "Edit My Profile", edit_user_registration_path %>
                </li>
                    <li class="divider"></li>
                <li>
                    <%= button_to "Sign Out", destroy_user_session_path(resource_name), method: :delete, class: "btn btn-primary" %>
                </li>
            </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
