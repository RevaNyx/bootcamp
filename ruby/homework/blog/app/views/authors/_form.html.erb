<%= form_with(model: author) do |form| %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, placeholder: "Enter author name" %>
    </div>
  
    <div class="field">
      <%= form.label :bio %>
      <%= form.text_area :bio, placeholder: "Write a short bio" %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  